{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Nexus Inventory Hub",
    "version": "1.0.0",
    "identifier": "com.nexus.inventory",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Nexus Inventory Hub",
                "width": 1400,
                "height": 900,
                "minWidth": 1000,
                "minHeight": 700,
                "resizable": true,
                "fullscreen": false,
                "center": true,
                "visible": true
            }
        ],
        "security": {
            "csp": "default-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' https: http: ws:; frame-src 'self'"
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "nsis"
        ],
        "icon": [
            "icons/icon.png"
        ],
        "windows": {
            "wix": {
                "language": "en-US"
            }
        }
    },
    "plugins": {
        "shell": {
            "open": true
        }
    }
}